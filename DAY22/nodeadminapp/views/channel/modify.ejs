<!--우측 콘텐츠 영역 -->
<form action="/channel/modify/<%=channel.channel_id%>" id="channelForm" method="post">
    <div class="wrapper wrapper-content">
        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group d-flex flex-column">
                        <label class="control-label">대표이미지</label>
                        <img class="w-75" src="" alt="" />
                        <button class="w-75" submit="/">변경</button>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <div>
                            <label class="control-label">커뮤니티ID</label>
                            <input type="text" id="community_id" 
                            value="<%= channel.community_id %>"class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label class="control-label col-6">카테고리</label>
                            <input type="text" id="category_code" 
                            value="<%= channel.category_code %>"class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">채팅방 이름</label>
                            <input type="text" id="channel_name" 
                            value="<%= channel.channel_name %>"class="form-control" />
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label">유저 수</label>
                            <input type="text" id="user_limit" 
                            value="<%= channel.user_limit %>"class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">소개글</label>
                            <textarea id="channel_desc" rows="4" cols="50" class="form-control">
                                <%= channel.channel_desc %></textarea>
                        </div>
                        <div class="form-group">
                            <label class="control-label">상태</label>
                            <select id="channel_state_code" 
                            value="<%= channel.isDisplayCode %>" class="form-control">
                                <option value="9" <% if( channel.isDisplayCode === 9) { %> selected <%} %>>선택</option>
                                <option value="0" <% if( channel.isDisplayCode === 0) { %> selected <%} %>>비활성화</option>
                                <option value="1" <% if( channel.isDisplayCode === 1) { %> selected <%} %>>사용중</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/channel/delete" class="btn btn-danger">삭제</a>
                <a href="/channel/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </div>
</form>
