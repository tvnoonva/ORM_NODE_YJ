<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <form action="/admin/modify/<%=admin.admin_member_id%>" id="adminForm" method="post">
        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group d-flex flex-column">
                        <label class="control-label">프로필 사진</label>
                        <img class="w-75" src="" alt="" />
                        <button class="w-75" submit="/">변경</button>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <div>
                            <label class="control-label">소속회사코드</label>
                            <input type="text" name="company_code" id="company_code" 
                            value="<%= admin.company_code %>" class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label class="control-label col-6">ID</label>
                            <input type="text" name="admin_id" id="admin_id" 
                            value="<%= admin.admin_id %>" class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">이름</label>
                            <input type="text" name="admin_name" id="admin_name" 
                            value="<%= admin.admin_name %>" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">비밀번호</label>
                            <input type="password" name="admin_password" id="admin_password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">email</label>
                            <input type="email" name="email" id="email" 
                            value="<%= admin.email %>" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">전화번호</label>
                            <input type="text" name="telephone" id="telephone" 
                            value="<%= admin.telephone %>" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">소속부서</label>
                            <input type="text" name="dept_name" id="dept_name" 
                            value="<%= admin.dept_name %>" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">사용여부</label>
                            <select id="used_yn_code" name="used_yn_code" class="form-control">
                                <option value="9">선택</option>
                                <option value="0">사용안함</option>
                                <option value="1">사용함</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/admin/delete?admin_id=<%=admin.admin_member_id%>" class="btn btn-danger">삭제</a>
                <a href="/admin/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>

<script>
    //유효성검사
    $('#adminForm').submit(function () {
        if ($('#company_code').val() == '') {
            alert('소속 회사를 입력해주세요');
            $('#company_code').focus();
            return false;
        }

        if ($('#admin_id').val() == '') {
            alert('ID를 입력해주세요.');
            $('#admin_id').focus();
            return false;
        }

        if ($('#admin_name').val() == '') {
            alert('이름을 입력해주세요.');
            $('#admin_name').focus();
            return false;
        }

        if ($('#admin_password').val() == '') {
            alert('비밀번호를 입력해주세요.');
            $('#admin_password').focus();
            return false;
        }

        if ($('#email').val() == '') {
            alert('email을 입력해주세요.');
            $('#email').focus();
            return false;
        }

        if ($('#telephone').val() == '') {
            alert('전화번호를 입력해주세요.');
            $('#telephone').focus();
            return false;
        }

        return true;
    });
</script>