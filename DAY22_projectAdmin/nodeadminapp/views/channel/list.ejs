<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="OrderNo">채널이름</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="OrderName">아이디</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="MobileNo">사용여부</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-primary">조회</button>
            <a href="/channel/create" class="btn btn-info">신규</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th width="10%">채팅방ID</th>
                                    <th width="10%">커뮤니티ID</th>
                                    <th width="10%">카테고리</th>
                                    <th width="20%">채팅방 이름</th>
                                    <th width="10%">유저 수</th>
                                    <th width="10%">상태</th>
                                    <th width="20%">생성일</th>
                                    <th width="10%">방장</th>
                                </tr>
                            </thead>
                            <tbody class="hoverTblBody">
                                <% for(var i=0;i<channel_list.length;i++){ %>
                                    <tr>
                                        <td>
                                            <%=channel_list[i].channel_id%>
                                        </td>
                                        <td>
                                            <%=channel_list[i].community_id%>
                                        </td>
                                        <td>
                                            <%=channel_list[i].category_code%>
                                        </td>
                                        <td><a href="/channel/modify/<%=channel_list[i].channel_id%>">
                                                <%=channel_list[i].channel_name%>
                                            </a></td>
                                        <td>
                                            <%=channel_list[i].user_limit%>
                                        </td>
                                        <td>
                                            <% if(channel_list[i].channel_state_code==1){%>
                                                사용중
                                                <% } else{ %>
                                                    비활성화
                                                    <% }%>
                                        </td>
                                        <td>
                                            <%=channel_list[i].reg_date%>
                                        </td>
                                        <td>
                                            <%=channel_list[i].reg_member_id%>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>